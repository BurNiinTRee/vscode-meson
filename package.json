{
  "name": "meson",
  "displayName": "Meson",
  "description": "Meson langage support for Visual Studio Code",
  "icon": "graphics/icon.png",
  "version": "1.2.0",
  "license": "Apache-2.0",
  "publisher": "asabil",
  "author": {
    "name": "Ali Sabil"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/asabil/vscode-meson.git"
  },
  "bugs": {
    "url": "https://github.com/asabil/vscode-meson/issues"
  },
  "homepage": "https://github.com/asabil/vscode-meson/blob/master/README.md",
  "engines": {
    "vscode": "^1.26.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:meson",
    "onCommand:mesonbuild.configure",
    "onCommand:mesonbuild.build",
    "onCommand:mesonbuild.test",
    "workspaceContains:meson.build"
  ],
  "main": "./out/src/extension",
  "contributes": {
    "commands": [
      {
        "command": "mesonbuild.configure",
        "title": "Meson: Create build directory"
      },
      {
        "command": "mesonbuild.reconfigure",
        "title": "Meson: Reconfigure"
      },
      {
        "command": "mesonbuild.clean",
        "title": "Meson: clean built objects"
      },
      {
        "command": "mesonbuild.build",
        "title": "Meson: Build"
      },
      {
        "command": "mesonbuild.test",
        "title": "Run unit tests"
      }
    ],
    "taskDefinitions": [
      {
        "type": "meson",
        "required": [
          "mode"
        ],
        "properties": {
          "target": {
            "type": "string",
            "description": "The Meson target to... target",
            "default": "all",
            "dependencies": {
              "mode": {
                "enum": [
                  "build",
                  "test"
                ]
              }
            }
          },
          "filename": {
            "type": "string",
            "description": "Filename to run as part of the target",
            "dependencies": {
              "mode": {
                "enum": [
                  "run"
                ]
              }
            }
          },
          "mode": {
            "type": "string",
            "description": "Whether to build or to run the target.",
            "enum": [
              "build",
              "run",
              "test",
              "reconfigure",
              "clean"
            ],
            "default": "build"
          }
        }
      }
    ],
    "languages": [
      {
        "id": "meson",
        "aliases": [
          "Meson",
          "meson",
          "mesonbuild"
        ],
        "filenames": [
          "meson.build",
          "meson_options.txt"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "meson",
        "scopeName": "source.meson",
        "path": "./syntaxes/meson.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "meson",
        "path": "./snippets/meson.json"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "meson-sidebar",
          "title": "Meson Build",
          "icon": "res/meson_32.svg"
        }
      ]
    },
    "views": {
      "meson-sidebar": [
        {
          "id": "meson-project",
          "name": "Meson project"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install"
  },
  "devDependencies": {
    "@types/node": "*",
    "typescript": "^2.4.1",
    "vscode": "^1.1.17"
  },
  "dependencies": {
    "array-flat-polyfill": "^1.0.1"
  }
}
